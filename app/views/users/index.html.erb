<% if current_user %>


  <%= content_for(:navigation) do %>
    <% if current_user.admin %>
      <p><%= link_to 'Add New User', new_user_path %></p>
    <% end %>
    <p><%= link_to 'Add New Product', new_product_path %></p>
  <% end %>

  <%= content_for(:header) do %>
    <h1>All Users</h1>
  <% end %>

  <ul>
    <% @users.each do |user| %>
      <li><%= link_to "#{user.name}", user_path(user) %></li>
    <% end %>
  </ul>

<% end %>
